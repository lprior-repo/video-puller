# EditorConfig for video-puller
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Gleam files
[*.gleam]
indent_size = 2

# Erlang files
[*.erl]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 4

# SQL files
[*.sql]
indent_size = 2

# TOML files (gleam.toml)
[*.toml]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles need tabs
[Makefile]
indent_style = tab

[justfile]
indent_style = space
indent_size = 4
